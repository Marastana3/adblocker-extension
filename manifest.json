{
  "manifest_version": 3,
  "name": "InspireBlock",
  "version": "0.1",
  "description": "Blocks ads and optionally replaces gambling ads with quotes.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "webNavigation",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}